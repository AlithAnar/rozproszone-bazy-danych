@model IEnumerable<rozproszone_bazy_danych.Models.Settlement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h2>@ViewBag.error</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Użytkownik
        </th>
        <th>
            Dzisiejsza data
        </th>
        <th>
            Stan zużycia energii
        </th>
        <th>
            Data ostatniego zgłoszenia
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Current_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.energy_usage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.settlement_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
